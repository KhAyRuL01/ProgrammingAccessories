<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nancy1">

    <TextView
        android:id="@+id/binaryindextree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="60dp"
        android:text="@string/catalannumber1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="click" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/binaryindextree"
        android:layout_alignStart="@+id/binaryindextree"
        android:layout_below="@+id/binaryindextree"
        android:layout_marginTop="25dp"
        android:text="@string/catalannumber2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="click" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="25dp"
        android:text="@string/catalannumber3"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:onClick="click" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back"
        android:onClick="back"
        android:background="@null"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:onClick="exitApp"
        android:text="Exit"
        android:textSize="20dp"
        android:textColor="@color/white"/>

</RelativeLayout>
